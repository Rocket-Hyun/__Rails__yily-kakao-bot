<div>
  <h3><%= @store.name %>의 칵테일 리스트</h3>
  <ul>
    <% @store.drinks.each do |drink| %>
      <li>
        <%= drink.name %>  <%= link_to "[삭제]", store_delete_drink_path(store_id:@store.id, id:drink.id) %>
      </li>
    <% end %>
  </ul>
  <div>
    <%= form_for([@store, @store.drinks.new]) do |f|  %>


      <div class="field">
        <%= f.label :name %><br>
        <%= f.text_field :name %>
      </div>

      <div class="field">
        <%= f.label :desc %><br>
        <%= f.text_field :desc %>
      </div>

      <div class="actions">
        <%= f.submit %>
      </div>

    <% end %>
  </div>

</div>
